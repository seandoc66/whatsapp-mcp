# Frontend Environment Configuration for WhatsApp Reply Assistant

# Backend API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3002

# Application Configuration
REACT_APP_NAME=WhatsApp Reply Assistant
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_DEBUG=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# WebSocket Configuration
REACT_APP_WS_RECONNECT_DELAY=3000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=5

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ENABLE_SOUND=true
REACT_APP_AUTO_SCROLL=true