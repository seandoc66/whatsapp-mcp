# WhatsApp Business Reply Assistant Environment Configuration

# HuggingFace API Configuration (Required for embeddings)
# Get your free API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# n8n Configuration
N8N_ENCRYPTION_KEY=your_n8n_encryption_key_here

# Database Paths (these are defaults, usually no need to change)
DATABASE_PATH=./database/store/messages.db
CHROMA_DB_PATH=./database/chroma

# API Configuration
BACKEND_PORT=3001
WEBSOCKET_PORT=3002
FRONTEND_PORT=3000
N8N_PORT=5678
CHROMADB_PORT=8000

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
SIMILARITY_THRESHOLD=0.7
MAX_SUGGESTIONS=3

# Security (for production)
NODE_ENV=development
LOG_LEVEL=info